<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eb1d27"
    tools:context=".Questao4">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/bebas"
        android:text="Questão 04"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/bebas"
        android:gravity="center"
        android:text="Quem deu o famoso escudo para o capitão américa?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <RadioGroup
        android:id="@+id/rgAlternativas4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <RadioButton
            android:id="@+id/rbAlternativa41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#911F1F"
            android:paddingLeft="10dp"
            android:text="Nick Fury"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/rbAlternativa42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#911F1F"
            android:paddingLeft="10dp"
            android:text="Pai do Tony Stark"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/rbAlternativa43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#911F1F"
            android:paddingLeft="10dp"
            android:text="Pai do capitão américa"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/rbAlternativa44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#911F1F"
            android:paddingLeft="10dp"
            android:text="Peggy Carter"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/rbAlternativa45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#911F1F"
            android:paddingLeft="10dp"
            android:text="Bucky, o soldado invernal"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>