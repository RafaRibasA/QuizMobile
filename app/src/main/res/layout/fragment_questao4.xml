<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questao4">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Questão 04"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Quem deu o famoso escudo para o capitão américa?"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <RadioGroup
        android:id="@+id/rgAlternativas4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <RadioButton
            android:id="@+id/rbAlternativa41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nick Fury" />

        <RadioButton
            android:id="@+id/rbAlternativa42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pai do Tony Stark" />

        <RadioButton
            android:id="@+id/rbAlternativa43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pai do capitão américa" />

        <RadioButton
            android:id="@+id/rbAlternativa44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peggy Carter, a grande paixão do capitão américa" />

        <RadioButton
            android:id="@+id/rbAlternativa45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buck, o soldado invernal" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>